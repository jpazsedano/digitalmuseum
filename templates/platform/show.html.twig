{% extends 'base.html.twig' %}

{% block title %}{{ platform.name }}{% endblock %}

{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>{{ platform.name }}</h1>
    <div><a href="{{ path('company-show', {id: platform.company.id}) }}">{{platform.company.name }}</a> - {{ platform.generation }}</div>
    <div>Released in: {{ platform.launch|date('d/m/Y') }}</div>
</div>
{% endblock %}
