{% extends 'base.html.twig' %}

{% block title %}{{videogame.name}}{% endblock %}

{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>{{videogame.name}}</h1>
    <div><a href="{{ path('company-show', {id: videogame.developer.id}) }}">{{videogame.developer}}</a> - {{videogame.genre}}</div>
    <p>{{videogame.description}}</p>
    <h2>Releases</h2>
    {% if videogame.launch|length > 0 %}
    <ul>
        {% for l in videogame.launch %}
        <li><a href="{{ path('platform-show', {id: l.platform.id })}}">{{ l.platform.name }}</a> - {{ l.date|date('d/m/Y')}}</li>
        {% endfor %}
    </ul>
    {% else %}
    <p>Game not released</p>
    {% endif %}
</div>
{% endblock %}
